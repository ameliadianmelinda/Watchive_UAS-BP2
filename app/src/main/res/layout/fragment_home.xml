<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scroll_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="48dp"
            android:paddingBottom="16dp">

            <!-- Search Bar Area with Custom Toggle Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext"
                    android:hint="@string/search_hint"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_light"
                    android:drawableEnd="@android:drawable/ic_menu_search"
                    android:drawableTint="@color/white"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/theme_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:checked="true"
                    android:thumb="@drawable/switch_thumb"
                    app:track="@drawable/switch_track"
                    app:switchMinWidth="48dp"
                    app:showText="false" />

            </LinearLayout>

            <!-- Home Content Container -->
            <LinearLayout
                android:id="@+id/home_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Film Populer Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popular_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Featured Movie Card with Shimmer -->
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_featured"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:shimmer_auto_start="true"
                    app:shimmer_duration="1000">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/featured_movie_card"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:id="@+id/featured_content_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_edittext">

                            <ImageView
                                android:id="@+id/featured_movie_poster"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription"
                                tools:src="@tools:sample/backgrounds/scenic"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/featured_movie_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    tools:text="10 Things I Hate About You"/>

                                <RatingBar
                                    android:id="@+id/featured_movie_rating"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:stepSize="0.5"
                                    android:progressTint="#FFD700"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:id="@+id/featured_movie_genre"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Genre"
                                    android:textColor="@color/gray_light"
                                    android:textSize="12sp"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:id="@+id/featured_movie_director"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/gray_light"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp"/>

                                <!-- Spacer -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ditonton 100+ orang"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <!-- Rekomendasi Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommendations_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_recommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_auto_start="true"
                    app:shimmer_duration="1000"
                    android:layout_marginBottom="24dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recommendations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_movie_horizontal" />

                </com.facebook.shimmer.ShimmerFrameLayout>

                <!-- Baru Rilis Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_releases_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_new_releases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_auto_start="true"
                    app:shimmer_duration="1000">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_new_releases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_movie_horizontal"/>

                </com.facebook.shimmer.ShimmerFrameLayout>
            </LinearLayout>

            <!-- Search Results Container -->
            <LinearLayout
                android:id="@+id/search_results_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_search_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hasil Pencarian"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_movie_horizontal" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
