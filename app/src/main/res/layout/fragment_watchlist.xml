<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".WatchlistFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="20dp">

        <!-- Header: Title and plus icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_watchlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/watchlist_title"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="@string/add"
                android:tint="@color/white"
                app:tint="@color/white" />
        </RelativeLayout>

        <!-- Search bar with EditText -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_search"
            android:backgroundTint="#2A2A2A"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_search_watchlist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/watchlist_search_hint"
                android:textColor="@color/white"
                android:textColorHint="#8E8E93"
                android:textSize="15sp"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:importantForAutofill="no" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#8E8E93"
                app:tint="#8E8E93" />
        </LinearLayout>

        <!-- Dynamic Content Section (Folders Only) -->
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_folder_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folder Saya"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_folders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_folder" />
        </LinearLayout>

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="80dp"
            android:paddingBottom="40dp">

            <ImageView
                 android:layout_width="160dp"
                 android:layout_height="160dp"
                 android:src="@drawable/ic_empty_watchlist"
                 android:alpha="0.3"
                 android:tint="@color/white"
                 app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/watchlist_empty_title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Buat folder baru untuk mulai mengumpulkan film favorit Anda."
                android:textColor="#8E8E93"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btn_explore"
                android:layout_width="220dp"
                android:layout_height="54dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/glow_button"
                android:text="@string/watchlist_explore"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
