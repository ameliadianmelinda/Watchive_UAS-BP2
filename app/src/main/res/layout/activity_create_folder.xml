<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="48dp"
    android:paddingBottom="20dp">

    <!-- Header / Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_button_background"
        android:src="@drawable/ic_back"
        android:scaleType="center"
        app:tint="@color/white"
        android:contentDescription="Back"/>

    <TextView
        android:id="@+id/tv_title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="watchlist"
        android:textColor="#666666"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Form Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/et_folder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Folder ..."
            android:textColor="@color/white"
            android:textColorHint="#666666"
            android:background="@null"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:importantForAutofill="no"
            android:inputType="text"/>

        <EditText
            android:id="@+id/et_folder_description"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#D9D9D9"
            android:gravity="top|start"
            android:hint="Tulis deskripsi...(optional)"
            android:padding="20dp"
            android:textColor="#333333"
            android:textColorHint="#666666"
            android:textSize="14sp"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_folder"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:text="Selesai"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/purple_medium" />

    </LinearLayout>

</RelativeLayout>
