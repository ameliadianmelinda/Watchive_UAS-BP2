<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.watchive.ui.home.HomeFragment"
        android:label="Home" >
        <argument
            android:name="scroll_to_top"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>

    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.example.watchive.WatchlistFragment"
        android:label="Watchlist" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.watchive.ProfileFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.watchive.ui.detail.MovieDetailFragment"
        android:label="Detail">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.watchive.ui.search.SearchFragment"
        android:label="Search" />

    <fragment
        android:id="@+id/folderDetailFragment"
        android:name="com.example.watchive.ui.watchlist.FolderDetailFragment"
        android:label="Folder Detail">
        <argument
            android:name="folderId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/selectMoviesFragment"
        android:name="com.example.watchive.ui.watchlist.SelectMoviesFragment"
        android:label="Select Movies">
        <argument
            android:name="folderId"
            app:argType="integer" />
    </fragment>

    <dialog
        android:id="@+id/addToPlaylistBottomSheet"
        android:name="com.example.watchive.ui.watchlist.AddToPlaylistBottomSheet"
        android:label="Add to Playlist">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </dialog>

</navigation>
