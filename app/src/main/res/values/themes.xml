<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Watchive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main colors -->
        <item name="colorPrimary">@color/purple_medium</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Status Bar & Background -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        
        <!-- Bottom Navigation Style -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>
    </style>

    <!-- Tambahkan tema Splash di sini agar tidak error -->
    <style name="Theme.Watchive.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
